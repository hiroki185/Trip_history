
<div class="container mx-auto">
  <%= render 'info', user: @user %>
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="row mt-3" style="border-bottom-width: 5px; border-bottom-style: solid; border-bottom-color: #b0c4de;">
        <h2 class="col text-center">旅人一覧</h2>
        <div class="col">
         <form class="form-inline my-2 my-lg-0" action="<%= search_users_path %>" method="get">
           <input class="form-control mr-sm-2 rounded-pill" type="search" name="keyword" placeholder="旅人を探す" aria-label="Search">
            <button class="btn btn-outline-success rounded-pill" type="submit">検索</button>
           </form>
        </div>
      </div>
      <%= render 'users/index',users: @users %>
      <div class="d-flex justify-content-center">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
