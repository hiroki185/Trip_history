<div class='container'>
  <div class="row mt-3">
 <div class="col-2">
  <%= image_tag @user.get_profile_image, class: "rounded-circle", size:'100x100' %>
</div>
        <div class="col-8">
      <h4><%= @user.name %>さんの部屋
          <% if current_user != @user && current_user.following?(@user) && @user.following?(current_user) %>
      <%= link_to 'chatを始める', chat_path(@user.id), class: "btn btn-outline-success rounded-pill mb-2" %>
    <% end %>
    </h4>
         <%= @user.body %>
         </div>
</div>
  <div class="row my-3" style="border-bottom-width: 5px; border-bottom-style: solid; border-bottom-color: #b0c4de;">
    <h2 class="col"><%= @user.name %>さんの旅一覧</h2>
    <div class="col-8">
      <% if current_user && @user.name == current_user.name %>
        <%= link_to "プロフィールを編集", edit_user_path(current_user), method: :get, class: "btn btn-outline-success rounded-pill" %>
        &nbsp;&nbsp;
        <%= link_to "新しく投稿する", new_travel_path, class: 'btn btn-outline-success rounded-pill' %>
      <% end %>
    </div>
  </div>
  <%= render 'travels/index', travels: @travels %>
  <%= paginate @travels %>
</div>