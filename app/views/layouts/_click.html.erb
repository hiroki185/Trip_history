<head>
  <style>
    .btn {
  display: inline-block;
  position: relative;
  top: 0;
  left: 0;
  height: 50px;
  padding: 0 50px;
  background: #06a309;
  border-radius: 3px;
  text-align: center;
  color: #fff;
  line-height: 50px;
  overflow: hidden;
  transition: all 0.3s ease-in;
}
.btn:hover {
  background: #2abc27;
}

.btn.active {
  background: #2abc27;
}

.btn:active span::after {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100px;
  height: 100px;
  margin-top: -50px;
  margin-left:-50px;
  content: "";
  background: #3bcc3b;
  border-radius: 100%;
  opacity: 0;
  animation: ripple 0.3s 1 ease-out;
}


@keyframes ripple {
  0% {
    opacity: 1;
    transform: scale(0.0);
  }

  100% {
    opacity: 1;
    transform: scale(1.0);
  }
}
  </style>
  </head>
<button class="btn"><span>BUTTON</span></button>
<script>
  $(function() {
  var $touch = $(".btn");
  $touch.click(function() {
    $touch.addClass('active');
    setTimeout(function() {
    $touch.removeClass('active');
    }, 300);
  });
});
</script>