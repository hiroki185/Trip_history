 <head>
   <style>
     .navbar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70px;
}

.center-align {
  /* 真ん中に配置するためのスタイル定義 */
}

.centered-logo {
  margin-left: auto;
  margin-right: auto;
}
   </style>
 </head>

<div class="navbar center-align" style="background-color: #008b8b;">

  <%= link_to root_path do %>
    <%= image_tag 'Trip_history - MarkMaker Logo.png', width:"200", height:"100%", class: "centered-logo" %>
  <% end %>


  <% if user_signed_in? %>
<%= render 'layouts/nav' %>
  <% elsif admin_signed_in? %>
    <div class="navbar right-align-item">
      <%= form_with(url: admin_search_path, local: true, method: :get ) do |form| %>
        <%= form.text_field :keyword, placeholder: "キーワードを入力", class: "form-group" %>
        <%= form.submit "検索",class: 'btn-outline-success rounded-pill mr-3 mt-3' %>
      <% end %>
    </div>
  <% end %>
</div>