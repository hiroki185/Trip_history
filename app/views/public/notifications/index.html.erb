<div class="container" style='width: 60%;'>
  <div class="row mt-3">
    <div class="col">
      <h4>通知</h4>
      <% if @notifications.present? %>
        <%= link_to notification_path(@notifications), method: :delete,class:"btn btn-light" do %>
        全削除&nbsp;<i class="fa-solid fa-trash-can"></i>
        <% end %>
        <% @notifications.each do |notification| %>
          <%= render "#{notification.action_type}", notification: notification %>
        <% end %>
      <% else %>
        通知はありません
      <% end %>
    </div>
  </div>
</div>