<div class='container mt-3' style="background-color: #f0f8ff; border-radius: 10px; width:60%; padding: 20px 30px; box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.3);">
  <h2 class="text-center mb-3" style="border-bottom-width: 3px; border-bottom-style: solid; border-bottom-color: #a9a9a9; padding: 10px 0px 0px 0px;">投稿を編集</h2>
<%= form_with model: @travel do |f| %>
  <div class="form-group">
    <%= f.label :場所や地名 %>
    <%= f.text_field :title, class: 'form-control travel_title' %>
  </div>
  <div class="form-group">
  <%= f.label :住所 %>
  <%= f.text_field :address, class: 'form-control' %>
　</div>
　<div class="row">
  <div class="form-group col">
  <%= f.label :画像 %>
  <%= f.file_field :image, accept: "image/*" %>
  </div>
<div class="form-group col">
  <%= f.label :費用 %>
  <%= f.select :amount_range, options_for_select(@amount_ranges, @travel.amount_range), class: 'form-control' %>
</div>
<div class="form-group col">
      <%= f.label :交通手段 %> <br>
  <%= f.select :transportation, options_for_select(@transportations, @travel.transportation), class: 'form-control' %>
</div>
</div>
<div class="form-group">
  <label>タグ</label>
  <%= f.text_field :category,class: 'form-control book_category', placeholder: '＃をつけて投稿' %>
</div>

<div class="form-group">
  <%= f.label :感想 %>
  <%= f.text_area :body, rows: 8, class: 'form-control' %>
</div>
  <div class="form-group">
    <%= f.button "更新", class: 'button-hover edit', style: "z-index: 9998;" %>
  </div>
<% end %>
</div>