<style>
  .gray-overlay {
    position: relative;
  }

  .gray-overlay::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 50%;
    border-radius: 0px 0px 20px 20px;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .overlay-title {
    color: white;
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 50%
    font-weight: bold;
    font-size: 20px;
    text-align: center;
    margin-top: 10px;
    z-index: 1;
  }

  .image{
  border-radius: 20px 20px 20px 20px;
  width: 100%;
  height: 130px;
}
    .scale {
  transition: transform 0.3s ease-in-out;
}

.scale:hover {
  box-shadow: none;
  transform: scale(1.1);
}


.photo02 {
  animation: slideIn02 7s 1;
}

@keyframes slideIn02 {
  0% {
    opacity: 0;
  }
  10% {
    opacity: 0;
    transform: translateX(1000px);
  }
  70% {
    opacity: 1;
    transform: translateX(0);
  }
}
</style>

<div class="mx-auto photo02">
  <% travels.each do |travel| %>
    <% if travel.image.attached? %>
    <div class="mt-3">
      <div class="gray-overlay scale">
        <%= image_tag travel.image, class: "image" %>
        <p class="overlay-title">
           <% if current_user && travel.user == current_user %>
          <%= image_tag current_user.get_profile_image, size: '40x40', class: 'rounded-circle left' %>
          <% else %>
          <%= image_tag travel.user.get_profile_image, size: '40x40', class: 'rounded-circle left' %>
          <% end %>
          <%= link_to travel.title.length > 7 ? "#{travel.title[0..6]}..." : travel.title, travel, class: "text-white mr-4" %>
        </p>
      </div>
      </div>
    <% else %>
    <div class="mt-3">
      <div class="gray-overlay scale">
        <%= image_tag 'Untitled_logo_1_free-file.jpg', class: "image" %>
        <p class="overlay-title">
          <% if current_user && travel.user == current_user %>
          <%= image_tag current_user.get_profile_image, size: '40x40', class: 'rounded-circle left' %>
          <% else %>
          <%= image_tag travel.user.get_profile_image, size: '40x40', class: 'rounded-circle left' %>
          <% end %>
          <%= link_to travel.title.length > 7 ? "#{travel.title[0..6]}..." : travel.title, travel, class: "text-white mr-4" %>
        </p>
      </div>
      </div>
    <% end %>
  <% end %>
</div>
