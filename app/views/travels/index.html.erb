
<div class='container'>
  <div class="row">
    <div class="col">
  <div class="row mt-3" style="border-bottom-width: 5px; border-bottom-style: solid; border-bottom-color: #b0c4de;">
    <h2 class="col-8">みんなの旅一覧</h2>
    <form class="form-inline my-2 my-lg-0" action="<%= search_travels_path %>" method="get">
      <input class="form-control mr-sm-2 rounded-pill" type="search" name="keyword" placeholder="投稿を検索する" aria-label="Search">
      <button class="button-hover search" type="submit">検索</button>
    </form>
  </div>

  <div class="dropdown mt-3">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      並び替え
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
      <button class="dropdown-item" type="button"><%= link_to '新しい順', { latest: true } %></button>
      <button class="dropdown-item" type="button"><%= link_to '古い順', { old: true } %></button>
      <button class="dropdown-item" type="button"><%= link_to 'いいね順', { favorite: true } %></button>
    </div>
    <script>
      $(document).ready(function() {
        $('.dropdown-item').click(function() {
          var link = $(this).children('a').attr('href');
          window.location.href = link;
        });
      });
    </script>
    <%= render 'index', travels: @travels %>
    <%= paginate @travels %>
  </div>
</div>

    <div class="col-3">
    <div class="mt-4" style="border: 3px solid; border-radius: 15px; height: 300px;">
      <h4 class="text-center my-2" style="border-bottom: 3px solid;">タグ一覧</h4>
  <%= render 'travels/tag', travels: @travels %>
</div>
<div class="text-center mt-2">閲覧数が多い旅</div>
<%= render 'travels/view', travels: @travel_detail %>

</div>

</div>
</div>