<head>
  <style>
    .scrollable {
      max-height: 600px;
      overflow-y: scroll;
      scrollbar-width: thin;
      scrollbar-color: transparent transparent;
    }

    .triangle {
      width: 10px;
      height: 10px;
      border-left: 10px solid transparent;
      border-right: 10px solid transparent;
      border-bottom: 10px solid lightgray;
      margin-left: 10px;
    }

    .scale {
      transition: transform 0.3s ease-in-out;
    }

    .scale:hover {
      box-shadow: 0px 0px 15px 2px rgba(0, 0, 0, 0.2);
      transform: scale(1.1);
    }

    .img {
      border-radius: 40px 40px 0px 0px;
    }


.photo01 {
  animation: slideIn01 3s 1;
}

.photo02 {
  animation: slideIn02 3s 1;
}



@keyframes slideIn01 {
  0% {
    opacity: 0;/*初期状態では透明に*/
    transform: translateX(-1000px);
  }
  60% {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideIn02 {
  0% {
    opacity: 0;
  }
  10% {
    opacity: 0;
    transform: translateX(1000px);
  }
  70% {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideIn03 {
  0% {
    opacity: 0;
  }
  20% {
    opacity: 0;
    transform: translateY(500px);
  }
  80% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn04 {
  0% {
    opacity: 0;
  }
  30% {
    opacity: 0;
    transform: translateY(-500px);
  }
  90% {
    opacity: 1;
    transform: translateY(0);
  }
}

.handle {
  width: 100px;
  height: 50px;
  position: relative;
  background-color: #696969;
  border-radius: 10px 10px 0px 0px;
  margin: 0 auto;
}

.box {
  width: 60px;
  height: 30px;
  background-color: #add8e6;
  border-radius: 10px 10px 0px 0px;
  position: absolute;
    bottom: 0;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
}

.roller{
  width: 20px;
  height: 15px;
  background-color: #696969;
  border-radius: 0px 0px 10px 10px;
}
  </style>
</head>



<div class="row">
  <div class="scrollable col" style="overflow: auto; max-height: 800px;" id="app-container">
    <% travels.each_slice(3) do |travels_slice| %>
    <div class="container">
      <div class="row justify-content-start">
        <% travels_slice.each do |travel| %>
        <div class="scale mt-3 mr-4 mb-3 photo01">
        <div class="handle"><div class="box"></div></div>
        <div class="border" style="width: 220px; height: 290px; background-color: #f0fff0; border-radius: 40px 40px 40px 40px;">
          <% if travel.image.attached? %>
          <%= image_tag travel.image, class: "img", size: "220x100" %>
          <% else %>
          <%= image_tag 'Untitled_logo_1_free-file.jpg', class: "img", size: "220x100" %>
          <% end %>
          <div style= "padding: 0px 10px;">
          <% if current_user && travel.user == current_user %>
          <%= check_box_tag "selected_travels[]", travel.id, false, id: "travel_#{travel.id}" %>
          <% end %>
          <% if current_user && travel.user == current_user %>
          <%= image_tag current_user.get_profile_image, size: '40x40', class: 'rounded-circle' %>
          <% else %>
          <%= image_tag travel.user.get_profile_image, size: '40x40', class: 'rounded-circle' %>
          <% end %>
          <%= link_to (travel.title.length > 7) ? "#{travel.title[0..6]}..." : travel.title, travel %>

          <div style="padding: 0px 10px 10px 10px;">
            <div class="bg-dark rounded-pill" style="height: 10px;"></div>
          </div>


            <div class="row">
            <p class="col ml-3" style="height: 20px;">
              <% if travel.category.present? %>
              <%= link_to travel.category, tagsearches_search_path(content: travel.category) %>
              <% end %>
            </p>
          </div>
          <div style="padding: 0px 10px 10px 10px;">
            <div class="bg-dark rounded-pill" style="height: 10px;"></div>
          </div>

          <div class="row" style="padding: 0px 10px;">
            <p class="col-5" id="comment_counter">
              <%= render "travel_comments/counter", travel: travel %>
            </p>
            <div class="" id="favorite_btn_<%= travel.id %>">
              <%= render "favorites/btn", travel: travel %>
            </div>

          </div>

          <div class="text-center">
          <%= travel.created_at.strftime('%Y/%m/%d %H:%M') %>
          </div>
        </div>
        </div>
                        <div class="row">
        <div class="roller col-1 mx-auto"></div>
        <div class="roller col-1 mx-auto"></div>
        </div>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

</div>
