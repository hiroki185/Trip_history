<head>
  <style>
    .scrollable {
      max-height: 600px;
      overflow-y: scroll;
      scrollbar-width: thin;
      scrollbar-color: transparent transparent;
    }
    .triangle{
  width: 10px;
  height: 10px;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-bottom: 10px solid lightgray;
  margin-left: 10px;
}
  </style>
</head>
<div class="scrollable" style="overflow: auto; max-height: 600px;">
  <% travels.each do |travel| %>
    <div class="mb-3 mx-auto" style="border-bottom-width: 4px; border-bottom-style: solid; border-bottom-color: #b0c4de; padding-top: 10px; padding-bottom: 10px;">
      <div class="row">
        <h4 class="col">
          <%= link_to (travel.title.length > 10) ? "#{travel.title[0..9]}..." : travel.title, travel %>
        </h4>
      </div>
      <div class="row">
        <div class="col">
          <div class="row">
            <h5 class="col-3" id="comment_counter">
              <%= render "travel_comments/counter", travel: travel %>
            </h5>
            <h5 class="col-3">
              <% if travel.category.present? %>
                <%= link_to travel.category, tagsearches_search_path(content: travel.category) %>
              <% end %>
            </h5>
            <% if current_admin %>
            <% else %>
              <div class="col-3" id="favorite_btn_<%= travel.id %>">
                <%= render "favorites/btn", travel: travel %>
              </div>
            <% end %>
          </div>

          <div class="row">
            <div class="col">
              <% if current_user && travel.user == current_user %>
                <%= image_tag current_user.get_profile_image, size: '40x40', class: 'rounded-circle' %>&nbsp;&nbsp;<%= travel.user.name %>
              <% else %>
                <%= image_tag travel.user.get_profile_image, size: '40x40', class: 'rounded-circle' %>&nbsp;&nbsp;<%= travel.user.name %>
              <% end %>
              <div class="triangle"></div>
              <p class="col rounded" style="background-color: lightgray; padding: 8px">
                <%= travel.body.truncate(204) %><br>
                <%= travel.created_at.strftime('%Y/%m/%d %H:%M') %>
              </p>
            </div>
            <div class="col-4">
              <% if travel.image.attached? %>
                <%= image_tag travel.image, class: "rounded", size: "260x200" %>
              <% else %>
                <%= image_tag 'Untitled_logo_1_free-file.jpg', class: "rounded-circle", size: "260x200" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col">
          <% if current_user && travel.user == current_user %>
            <%= link_to edit_travel_path(travel.id), method: :get, class: "btn btn-outline-success rounded-pill" do %>
            編集&nbsp;&nbsp;<i class="fa-solid fa-pen-to-square"></i>
            <% end %>
          <% end %>
          &nbsp;&nbsp;
          <% if current_user && travel.user == current_user %>
            <%= link_to travel_path(travel.id), method: :delete, class: "btn btn-outline-danger rounded-pill", "data-confirm" => "本当に削除しますか？" do %>
            削除&nbsp;&nbsp;<i class="fa-solid fa-trash-can"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>