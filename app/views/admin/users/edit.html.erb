<head>
  <style>
.center-align {
  display: flex;
  justify-content: center;
  align-items: center;
}
</style>
</head>
<div class="container center-align">
  <div class="row">
    <div class="col">
      <h4 class="my-3"><%= @user.full_name %>さんの会員情報編集</h4>
      <table class="table table-borderless">
        <%= form_with model: [:admin, @user] do |f| %>
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <td>氏名</td>
          <td><%= f.text_field :first_name %>　<%= f.text_field :last_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :first_name_kana %>　<%= f.text_field :last_name_kana %></td>
        </tr>


        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", { value: :false }  %>

            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", { value: :true } %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>